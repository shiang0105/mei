<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/common_padding_17">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/sidebar_item_icon_height"
        android:layout_height="@dimen/sidebar_item_icon_height"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_calendar" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="@dimen/common_padding_15"
        android:singleLine="true"
        android:text="sdfsdfs"
        android:textSize="@dimen/text_size_15" />

</LinearLayout>